<body class="container">

<header>
  
</header>

<main>

  <h3 style="color:#050;"><%= mensajeExitoso %></h3>
  <a href="/api/v1/Users/alta" class="btn btn-primary">Cargar Usuario nuevo +</a>
  <br><hr/>
<h2>Listado de Usuarios:</h2>
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>ACCIONES</th>
        <th></th>

    </tr>
    <% users.forEach(function(user) { %>
        <tr>
            <td><%= user.dataValues.id %></td>
            <td><%= user.dataValues.firstName %></td>
            <td><%= user.dataValues.lastName %></td>
            <td><%= user.dataValues.email %></td>
            <td><a href="/api/v1/Users/detalle/<%= user.dataValues.id %>" class="btn btn-info">Detalle</a>
                <a href="/api/v1/Users/modificar/<%= user.dataValues.id %>"  class="btn btn-warning">Editar</a></td>
            <td><a href="/api/v1/Users/borrando/<%= user.dataValues.id %>"  onclick="return confirm('EstÃ¡s Seguro de borrar eso?')"  class="btn btn-danger">Borrar</a></td>
        </tr>
     
    <% }); %>
    </table>
    
</main>

<footer>
    <%- include('partials/pie') %>
 
</footer>
  <style>
      tr:hover td { background-color:#0002; }
      </style>
</body>
</html>